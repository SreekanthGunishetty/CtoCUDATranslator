    #include<stdio.h>
    #include<conio.h>
    #include<string.h>
      
    #define ROWSIZE 4    
    #define COLSIZE 4    
    
    int main(int argc , char *argv [] )
    {
		int i;
		int j;
		kernel int sum=0;
		kernel int a[ROWSIZE][COLSIZE];
		kernel int b[ROWSIZE][COLSIZE];
		kernel int c[ROWSIZE][COLSIZE];
		kernel int c2[ROWSIZE];

		for(i = 0;i<ROWSIZE;i++)
		{
			for(j = 0;j<COLSIZE;j++)
			{
				a[i][j] = 1;
				b[i][j] = 2;
				c[i][j]=0;
				c2[i]=0;
			}
		}
		#pragma kernel_start
		
		for(i = 0;i<ROWSIZE;i++)
		{
			for(j = 0;j<COLSIZE;j++)
			{
				c[i][j] = b[i][j]-a[i][j];
				//c[i]=a[i]+b[i];
			}
		}
		for(i = 0;i<ROWSIZE;i++)
		{
			for(j = 0;j<COLSIZE;j++)
			{
				c2[i] += c[i][j];
				
			}
		}
		for(i = 0;i<ROWSIZE;i++)
		{
			sum += c2[i];
		}
		#pragma kernel_end
		
		printf("\n Sum = %d",sum);;
		
		

//		system("pause");

		return 0;
    } 